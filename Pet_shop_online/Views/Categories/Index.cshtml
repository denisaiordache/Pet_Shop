
<h2>Lista categorii</h2>
<h1>@ViewBag.Message</h1>

@foreach (var cat in ViewBag.Categories)
{
    <div class="panel panel-default">
        <div class="panel-heading">@cat.CategoryName</div>
        <div class="panel-footer">
            <a class="btn btn-sm btn btn-success" href="/Categories/Show/@cat.CategoryID">
                Afisare categorie
            </a>

        </div>
       
    </div>
}
<a class="btn btn-primary" href="/Categories/New">Adauga categorie</a>
